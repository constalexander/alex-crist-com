{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@alex/effects": ["libs/effects/src/index.ts"],
      "@alex/effects/*": ["libs/effects/src/*"],
      "@alex/analytics": ["libs/analytics/src/index.ts"],
      "@alex/contexts": ["libs/contexts/src/index.ts"],
      "@alex/contexts/*": ["libs/contexts/src/*"],
      "@alex/guards": ["libs/guards/src/index.ts"],
      "@alex/guards/*": ["libs/guards/src/*"],
      "@alex/hooks": ["libs/hooks/src/index.ts"],
      "@alex/hooks/*": ["libs/hooks/src/*"],
      "@alex/models": ["libs/models/src/index.ts"],
      "@alex/models/*": ["libs/models/src/*"],
      "@alex/providers": ["libs/providers/src/index.ts"],
      "@alex/providers/*": ["libs/providers/src/*"],
      "@alex/services": ["libs/services/src/index.ts"],
      "@alex/services/*": ["libs/services/src/*"],
      "@alex/stores": ["libs/stores/src/index.ts"],
      "@alex/stores/*": ["libs/stores/src/*"],
      "@alex/ui": ["libs/ui/src/index.ts"],
      "@alex/ui/*": ["libs/ui/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
